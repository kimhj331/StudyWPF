<Window x:Class="PknuWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PknuWPF"
        mc:Ignorable="d"
        Title="Test Window" Height="720" Width="1280">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="120">
        <TextBlock TextWrapping="Wrap" Text="TextBlock" Height="40" 
                   Margin="10"/>
        <TextBox x:Name="TxtNames" Height="35" TextWrapping="Wrap" Text="Input Somthing"
                 Margin="10"/>
        <ProgressBar x:Name="PgbTest" Height="30" Margin="10" Minimum="0" 
                     Maximum="100" Value="60"/>
        <Slider Height="40" Margin="10"/>
        <PasswordBox PasswordChar="♥" Password="Test" Height="35" Margin="10" />

    </StackPanel>
</Window>
